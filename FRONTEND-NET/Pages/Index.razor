@code {
    private string cookieName = "email";
    private string cookieValue = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            cookieValue = await CookieService.ReadCookieValue(JSRuntime);
            StateHasChanged();
        }
    }

}
